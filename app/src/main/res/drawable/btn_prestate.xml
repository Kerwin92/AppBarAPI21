			<padding 
			    android:left="10dp" 
			    android:top="5dp"
				android:right="10dp" 
				android:bottom="5dp" />
			<!-- <stroke 
			    android:width="1dip" 
			    android:color="@color/btmbtnborder"/> -->
		</shape>
	</item>
</selector>