<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape
		    android:background="@color/blue">
			<gradient 
			    android:startColor="@color/listview_divider"
			    android:endColor="@color/blue"
				android:angle="270" />
			<corners android:radius="100dp" />
			<padding 
			    android:left="10dp" 
			    android:top="5dp"
				android:right="10dp" 
				android:bottom="5dp" />
			<!-- <stroke 
			    android:width="1dip" 
			    android:color="@color/btmbtnborder"/> -->
		</shape>
	</item>
 
	<item android:state_focused="true">
		<shape
		    android:background="@color/blue">
			<gradient 
			    android:startColor="@color/listview_divider"
			    android:endColor="@color/blue"
				android:angle="270" />
