			<padding 
			    android:left="10dp" 
			    android:top="5dp"
				android:right="10dp" 
				android:bottom="5dp"/>
			<!-- <stroke 
			    android:width="1dip" 
			    android:color="@color/btmbtnborder"/> -->
		</shape>
	</item>
 
	<item>
		<shape
		    android:background="@color/blue">
			<gradient 
			    android:startColor="@color/blue"
			    android:endColor="@color/blue"
				android:angle="270" />
