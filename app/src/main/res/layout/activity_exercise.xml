<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android_custom="http://schemas.android.com/tools"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fffdfdfd"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/flyt_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_navTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="开始锻炼"
            android:textColor="@android:color/black"
            android:textSize="@dimen/second_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_giraffe"
            />
    </FrameLayout>


    <com.brainstorm.neckup.Utils.GifMovieView
        android:id="@+id/gif"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        />

    <com.brainstorm.neckup.Utils.ExcRoundProgressBar
        android:id="@+id/excRoundProgress"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android_custom:roundProgressColor="#ff5ec2cb"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ibtn_quit"/>

        <ImageButton
            android:id="@+id/ibtn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/ibtn_play"/>

        <ImageButton
            android:id="@+id/ibtn_sound"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ibtn_sound"/>
    </LinearLayout>
</RelativeLayout>