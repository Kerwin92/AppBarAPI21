        android:id="@+id/hlv_record"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_below="@id/flyt_title"
        android:layout_centerHorizontal="true">
    </com.brainstorm.neckup.adapter.HListView>-->

