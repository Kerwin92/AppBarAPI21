    <LinearLayout
        android:id="@+id/llyt_recordInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flipper"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_am"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/exec_pm"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="上天入地"
            android:textColor="@android:color/black"
            android:textSize="@dimen/third_font_size"/>

        <TextView
            android:id="@+id/tv_pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/exec_pm"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="前后低头"
            android:textColor="@android:color/black"
            android:textSize="@dimen/third_font_size"/>


        <TextView
            android:id="@+id/tv_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/news"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="站在封口的暴风何时会躺下？"
            android:textColor="@android:color/black"
            android:textSize="@dimen/third_font_size"/>

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/view"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="what did you 刚刚 say?"
            android:textColor="@android:color/black"
            android:textSize="@dimen/third_font_size"/>

        <TextView
            android:id="@+id/tv_likeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/like_num"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="12"
            android:textColor="@android:color/black"
            android:textSize="@dimen/third_font_size"/>
    </LinearLayout>

</RelativeLayout>